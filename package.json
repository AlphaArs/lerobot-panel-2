{
  "name": "lerobot-panel",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install:frontend": "npm install --prefix frontend",
    "install:electron": "npm install --prefix electron",
    "install:all": "npm run install:frontend && npm run install:electron && npm run install:backend",
    "install:backend": "python -m pip install -r backend/requirements.with-lerobot.txt",
    "postinstall": "npm run install:all",
    "dev": "concurrently -k \"npm:dev:backend\" \"npm:dev:frontend\" \"npm:dev:electron\"",
    "dev:backend": "python -m uvicorn backend.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:electron": "wait-on http://localhost:3000 && npm run dev --prefix electron"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}
